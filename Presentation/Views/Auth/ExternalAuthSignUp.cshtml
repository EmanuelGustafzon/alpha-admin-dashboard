@model AuthViewModel

<form asp-action="AddUserFromExternalProvider" asp-controller="Auth" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="ExternalAuthSignUpForm.FirstName" class="form-control" autocomplete="firstname" placeholder="Please enter your first name." />
        <label asp-for="ExternalAuthSignUpForm.FirstName" class="form-label"></label>
        <span asp-validation-for="ExternalAuthSignUpForm.FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="ExternalAuthSignUpForm.LastName" class="form-control" autocomplete="lastname" placeholder="Please enter your last name." />
        <label asp-for="ExternalAuthSignUpForm.LastName" class="form-label"></label>
        <span asp-validation-for="ExternalAuthSignUpForm.LastName" class="text-danger"></span>
    </div>
    <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
</form>
