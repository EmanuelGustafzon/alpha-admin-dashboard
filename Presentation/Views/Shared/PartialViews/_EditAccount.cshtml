@model EditAccountForm

<div id="edit-account" class="form-modal d-none">
    <div class="flex space-between">
        <h6>Edit Profile</h6>
        <button data-closeModal="true" class="btn-clean">x</button>
    </div>
    <form asp-action="EditAccount" asp-controller="Account" method="post" novalidate>

        <div class="img-preview-container circle">
            <img src="" class="img-preview"/>
            <input asp-for="Image" accept="image/*" class="d-none" />
        </div>
        <div class="form-group">
            <label asp-for="Firstname"></label>
            <input asp-for="Firstname" class="form-control">
            <span asp-validation-for="Firstname"></span>
        </div>
        <div class="form-group">
            <label asp-for="Lastname"></label>
            <input asp-for="Lastname" class="form-control">
            <span asp-validation-for="Lastname"></span>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Button</button>
        </div>
    </form>
</div>